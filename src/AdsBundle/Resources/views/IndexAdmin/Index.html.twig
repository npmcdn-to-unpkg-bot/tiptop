{% extends "AppBundle::layout-admin.html.twig" %}

{% block title "Администрирование - Обьявления" %}

{% block content %}
    
    <br/>
    
    <button type="button" class="btn btn-default">
        <a href="{{ path('_ads_admin_ad_add') }}">Добавить</a>
    </button>
    
    <hr/>
    
    <div class="kit__block">
        {% for item in ads %}
            <div class="media">
              <div class="media-left media-middle">
                <a href="{{ path('app_admin_pages_edit', { id: item.id }) }}">
                  <img class="media-object" src="{{ asset('bundles/system/images/empty.svg') }}" alt="{{ item.title }}">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading"><a href="{{ path('_ads_admin_ad_edit', { id: item.id }) }}">{{ item.title }}</a></h4>
                {{ item.body }}
                <p class="media-group-buttons">
                    <a href="#" class="btn btn-primary" role="button">Удалить</a>
                    <a href="{{ path('_ads_admin_ad_edit', { id: item.id }) }}" class="btn btn-default" role="button">Редактировать</a>
                </p>
              </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}